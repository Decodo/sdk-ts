{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2021"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "target": "esnext",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "pretty": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules/"
  ],
  "typeRoots": [
    "./src/global.d.ts",
    "./node_modules/@types"
  ]
}
